{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{%
  set classes = [
    'region',
    'region-' ~ region|clean_class
  ]
%}

{{ attach_library('common_design/cd-dropdown') }}
{{ attach_library('common_design/cd-filter') }}

{% if content %}

  {% if has_filter %}
    <div {{ attributes.addClass(classes) }} id="cd-filter" aria-labelledby="cd-filter-toggle" data-cd-toggable="Filter" data-cd-icon="arrow-down" data-cd-component="cd-filter" data-cd-toggable-keep="true">
  {% else %}
    <div {{ attributes.addClass(classes) }}>
  {% endif %}

      {{ content }}
    </div>

{% endif %}
