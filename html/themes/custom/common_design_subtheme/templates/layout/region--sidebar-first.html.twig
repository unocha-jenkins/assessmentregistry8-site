{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{%
  set classes = [
    'region',
    'region-' ~ region|clean_class
  ]
%}

{{ attach_library('common_design/cd-dropdown') }}

{% if content %}

  {% if has_filters %}
    <div {{ attributes.addClass(classes) }} role="menu" id="cd-filters-dropdown" aria-labelledby="cd-filters-dropdown-toggle" data-cd-toggable="Filters" data-cd-hidden="true" data-cd-icon="arrow-down" data-cd-component="cd-filters" data-cd-toggable-keep="true">
  {% else %}
    <div {{ attributes.addClass(classes) }}>
  {% endif %}

  {{ content }}

{% endif %}
